<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>OpenAI</title>

        <input-field type="password">
            <name>apiKey</name>
            <label>OpenAI Key</label>
            <helpText>Enter your OpenAI Api key from https://platform.openai.com/account/api-keys</helpText>
        </input-field>

    </card>


    <card>
        <title>Products</title>

        <input-field type="bool">
            <name>productImageEnabled</name>
            <label>Product Images</label>
            <defaultValue>true</defaultValue>
            <helpText>If enabled product images will be automatically generated if no CLI argument is provided.</helpText>
        </input-field>

        <input-field type="single-select">
            <name>productImageSize</name>
            <label>Size (px)</label>
            <defaultValue>1024x1024</defaultValue>
            <options>
                <option>
                    <id>1024x1024</id>
                    <name>1024x1024</name>
                </option>
                <option>
                    <id>256x256</id>
                    <name>256x256</name>
                </option>
                <option>
                    <id>512x512</id>
                    <name>512x512</name>
                </option>
            </options>
        </input-field>

    </card>


    <card>
        <title>Media</title>

        <input-field type="single-select">
            <name>mediaImageSize</name>
            <label>Size (px)</label>
            <defaultValue>1024x1024</defaultValue>
            <options>
                <option>
                    <id>1024x1024</id>
                    <name>1024x1024</name>
                </option>
                <option>
                    <id>256x256</id>
                    <name>256x256</name>
                </option>
                <option>
                    <id>512x512</id>
                    <name>512x512</name>
                </option>
            </options>
        </input-field>

    </card>

</config>